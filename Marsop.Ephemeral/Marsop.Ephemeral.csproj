<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <PackageId>Ephemeral</PackageId>
    <PackageTags>Time;Timestamps;Time Intervals</PackageTags>
    <Version>0.1.5</Version>
    <Authors>Alberto Gregorio</Authors>
    <Owners>albertogregorio</Owners>
    <Company>albertogregorio.com</Company>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>.NET Library to handle time intervals (composite start and end)</Description>
    <ProjectUrl>https://albertogregorio.com/ephemeral</ProjectUrl>
    <IconUrl>https://albertogregorio.com/ephemeral/img/EphemeralLogoCropped.png</IconUrl>
    <License>MIT</License>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Marsop.Ephemeral.Tests\**" />
    <EmbeddedResource Remove="Marsop.Ephemeral.Tests\**" />
    <None Remove="Marsop.Ephemeral.Tests\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Optional" Version="4.0.0" />
  </ItemGroup>


</Project>
